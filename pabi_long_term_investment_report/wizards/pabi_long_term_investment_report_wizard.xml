<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_pabi_long_term_investment_report_wizard" model="ir.ui.view">
            <field name="name">Long Term Investment</field>
            <field name="model">pabi.long.term.investment.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Long Term Investment">
                    <group col="4">
                        <field name="fiscalyear_id"/>
                        <field name="account_id"/>
                        <field name="partner_id"/>
                    </group>
                    <footer>
                        <button icon="gtk-execute" name="xls_export" string="Export" type="object" context="{'xls_export':1}" colspan="2"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_pabi_long_term_investment_report_wizard" model="ir.actions.act_window">
            <field name="name">Long Term Investment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pabi.long.term.investment.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_pabi_long_term_investment_report_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_pabi_investment_report"
            name="Investment"
            parent="account.menu_finance_generic_reporting"
            sequence="20"
            />

        <menuitem
            id="menu_pabi_long_term_investment_report_wizard"
            name="Long Term Investment"
            parent="menu_pabi_investment_report"
            action="action_pabi_long_term_investment_report_wizard"
            sequence="1"
            icon="STOCK_PRINT"
            />
    </data>
</openerp>
